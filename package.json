{
  "name": "@atomist/tslint-automation",
  "version": "0.1.35",
  "description": "Run tslint on commits to projects that support it",
  "dependencies": {
    "@atomist/automation-client": "https://r.atomist.com/SyYgQbRp6QG",
    "@atomist/slack-messages": "^0.11.0",
    "@types/winston": "^2.3.7",
    "cfenv": "^1.0.4",
    "child-process-promise": "^2.2.1",
    "github": "^13.0.1",
    "nodemon": "^1.14.9",
    "tslint": "^5.8.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.53",
    "@types/power-assert": "^1.4.29",
    "espower-typescript": "^8.1.2",
    "graphql-code-generator": "^0.8.14",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.4",
    "supervisor": "^0.12.0",
    "ts-node": "^3.3.0",
    "copyfiles": "^1.2.0",
    "typescript": "2.5.2",
    "typescript-formatter": "^6.1.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "gql:copy": "copyfiles 'src/**/*.graphql' build",
    "gql:gen": "gql-gen --file node_modules/@atomist/automation-client/graph/schema.cortex.json --template typescript --no-schema --out src/typings 'graphql/**/*.graphql'",
    "autotest": "supervisor -q -n exit -e ts -x npm -- run test",
    "clean": "rm -f *-v8.log; rm -f profile.txt; rm -rf build; rm -rf target",
    "build": "npm-run-all git:info gql:gen gql:copy compile",
    "compile": "tsc --project .",
    "fmt": "tsfmt --replace",
    "git:info": "atomist git",
    "lint": "tslint '**/*.ts' --exclude 'node_modules/**' --exclude 'build/**' -t verbose",
    "lint-fix": "tslint --fix '**/*.ts' --exclude 'node_modules/**' --exclude 'build/**' -t verbose",
    "testone": "mocha --compilers ts:espower-typescript/guess \"test/**/${TEST:-*.ts}\"",
    "test": "mocha --compilers ts:espower-typescript/guess \"test/**/*.ts\"",
    "benchmark": "mocha --prof --compilers ts:espower-typescript/guess \"test/**/*Benchmark.ts\"; node --prof-process isolate-* > profile.txt",
    "start": "atomist start --no-install --no-compile",
    "debug": "node $NODE_DEBUG_OPTION node_modules/@atomist/automation-client/start.client.js",
    "docker:build": "npm run build && docker build . -t automation-client-samples-ts-docker"
  },
  "author": "Atomist, Inc.",
  "license": "GPL-3.0",
  "engines": {
    "node": "8.9.x",
    "npm": "5.3.x"
  }
}
